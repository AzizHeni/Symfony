{% extends 'base.html.twig' %}

{% block title %}Add Book{% endblock %}

{% block body %}
    <h1>Add a New Book</h1>

    {{ form_start(form) }}

        {{ form_row(form.title) }}
        {{ form_row(form.publicationDate) }}
        {{ form_row(form.author) }}
        {{ form_row(form.category) }}
        
        <button type="submit" class="btn btn-primary">Add Book</button>

    {{ form_end(form) }}
{% endblock %}
