<h2>Liste des auteurs</h2>

{% if authors is defined and authors|length > 0 %}
    <table border="1" cellpadding="8">
        <tr>
            <th>Photo</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Livres</th>
            <th>Détails</th>
        </tr>
        {% for author in authors %}
            <tr>
                <td><img src="{{ author.picture }}" alt="{{ author.username }}" width="80"></td>
                <td>{{ author.username }}</td>
                <td>{{ author.email }}</td>
                <td>{{ author.nb_books }}</td>
                <td><a href="{{ path('author_show', {id: author.id}) }}">Détails</a></td>
            </tr>
        {% endfor %}
    </table>
{% else %}
    Aucun auteur disponible.
{% endif %}
