{% extends 'base.html.twig' %}

{% block title %}List authors{% endblock %}

{% block body %}
    <h1 style="text-align: center;">List authors</h1>

    <table border="1" style="margin: auto; border-collapse: collapse; width: 60%;">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td>{{ author.username }}</td>
                    <td>{{ author.email }}</td>
                    <td>
                        <a href="{{ path('author_edit', {'id': author.id}) }}">edit</a>
                        |
                        <a href="{{ path('author_delete', {'id': author.id}) }}"
                           onclick="return confirm('Are you sure you want to delete this author?');">
                           delete
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" style="text-align: center;">No authors found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div style="text-align: center; margin-top: 20px;">
        <a href="{{ path('author_new') }}">Add new author</a>
    </div>
{% endblock %}
